<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingTop="80dp"
    android:paddingRight="30dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgtoken"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        app:srcCompat="@drawable/token" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:text="Digite o código que enviamos para "
        android:textColor="#D3000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/campoToken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Código"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_recuperar3"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#244279"
        android:text="Recuperar minha senha"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</LinearLayout>